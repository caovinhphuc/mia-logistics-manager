# Makefile for MIA Logistics Manager
# Convenience commands for common tasks

.PHONY: help install start stop clean build test deploy backup

# Default target
help:
	@echo "MIA Logistics Manager - Available Commands"
	@echo "=========================================="
	@echo ""
	@echo "Development:"
	@echo "  make install          - Install all dependencies"
	@echo "  make start            - Start development servers"
	@echo "  make stop             - Stop all services"
	@echo "  make clean            - Clean build artifacts and dependencies"
	@echo ""
	@echo "Build & Test:"
	@echo "  make build            - Build production bundle"
	@echo "  make test             - Run tests"
	@echo "  make lint             - Run linter"
	@echo "  make format           - Format code"
	@echo ""
	@echo "Optimization: â­ NEW"
	@echo "  make analyze          - Analyze bundle size"
	@echo "  make optimize         - Run optimization checks"
	@echo "  make cleanup-deps     - Remove unused dependencies"
	@echo "  make fix-security     - Fix security vulnerabilities"
	@echo ""
	@echo "Deployment:"
	@echo "  make deploy           - Deploy to production"
	@echo "  make deploy-staging   - Deploy to staging"
	@echo ""
	@echo "Database:"
	@echo "  make backup           - Backup Google Sheets data"
	@echo "  make restore          - Restore from backup"
	@echo "  make verify           - Verify data integrity"
	@echo ""
	@echo "Maintenance:"
	@echo "  make health           - Check service health"
	@echo "  make logs             - View application logs"
	@echo "  make security         - Run security audit"
	@echo ""

# Installation (--legacy-peer-deps trÃ¡nh conflict MUI peer deps)
install:
	@echo "ğŸ“¦ Installing dependencies..."
	npm install --legacy-peer-deps
	@echo "âœ… Installation complete!"

install-frontend:
	@echo "ğŸ“¦ Installing frontend dependencies..."
	npm install --legacy-peer-deps
	@echo "âœ… Frontend dependencies installed!"

# Development
start:
	@echo "ğŸš€ Starting development servers..."
	./start-project.sh

start-simple:
	@echo "ğŸš€ Starting with simple script..."
	./start.sh

start-frontend:
	@echo "ğŸš€ Starting frontend only..."
	npm start

start-backend:
	@echo "ğŸš€ Starting backend only..."
	cd backend && npm start

stop:
	@echo "ğŸ›‘ Stopping services..."
	@pkill -f "react-scripts" || true
	@pkill -f "node.*server.cjs" || true
	@echo "âœ… Services stopped!"

# Build
build:
	@echo "ğŸ—ï¸  Building production bundle..."
	npm run build
	@echo "âœ… Build complete!"

build-analyze:
	@echo "ğŸ—ï¸  Building and analyzing bundle..."
	npm run build
	npm run analyze
	@echo "âœ… Build analysis complete!"

# Testing
test:
	@echo "ğŸ§ª Running tests..."
	npm test

test-coverage:
	@echo "ğŸ§ª Running tests with coverage..."
	npm run test:coverage

test-watch:
	@echo "ğŸ§ª Running tests in watch mode..."
	npm run test:watch

# Code Quality
lint:
	@echo "ğŸ” Running linter..."
	npm run lint

lint-fix:
	@echo "ğŸ”§ Fixing lint issues..."
	npm run lint:fix

format:
	@echo "âœ¨ Formatting code..."
	npm run format

format-check:
	@echo "ğŸ” Checking code format..."
	npm run format:check

# Deployment
deploy:
	@echo "ğŸš€ Deploying to production..."
	npm run deploy

deploy-staging:
	@echo "ğŸš€ Deploying to staging..."
	@echo "Not configured yet"

# Database Operations
backup:
	@echo "ğŸ’¾ Backing up Google Sheets..."
	npm run backup:sheets

restore:
	@echo "ğŸ“¥ Restoring from backup..."
	@read -p "Enter backup file path: " file; \
	npm run restore:sheets -- --file $$file

verify:
	@echo "ğŸ” Verifying data integrity..."
	npm run verify:migration

backup-full:
	@echo "ğŸ’¾ Creating full backup..."
	./scripts/backup-before-migration.sh

# Maintenance
health:
	@echo "ğŸ¥ Checking service health..."
	curl -s http://localhost:3100/api/health | jq . || echo "Backend not running"

health-all:
	@echo "ğŸ¥ Checking all services..."
	@echo "Frontend (port 3000):"
	@curl -s http://localhost:3000 > /dev/null && echo "âœ… Running" || echo "âŒ Not running"
	@echo ""
	@echo "Backend (port 3100):"
	@curl -s http://localhost:3100/api/health | jq . || echo "âŒ Not running"

logs:
	@echo "ğŸ“‹ Viewing logs..."
	@echo "Backend startup log:"
	@tail -n 50 logs/backend-startup.log 2>/dev/null || echo "No log file found"

logs-live:
	@echo "ğŸ“‹ Following logs (Ctrl+C to stop)..."
	tail -f logs/backend-startup.log logs/backend.log

security:
	@echo "ğŸ”’ Running security audit..."
	npm audit
	@echo ""
	@echo "ğŸ”§ Attempting to fix vulnerabilities..."
	npm audit fix

deps-check:
	@echo "ğŸ“¦ Checking dependencies..."
	npm run deps:check

deps-update:
	@echo "ğŸ“¦ Updating dependencies..."
	npm run deps:update

# Optimization Commands â­ NEW
analyze:
	@echo "ğŸ” Analyzing bundle size..."
	@echo "Building production bundle..."
	npm run build
	@echo "Analyzing with webpack-bundle-analyzer..."
	@command -v npx webpack-bundle-analyzer >/dev/null 2>&1 || npm install -D webpack-bundle-analyzer
	npx webpack-bundle-analyzer build/static/js/*.js --mode static --report build/bundle-report.html
	@echo "âœ… Bundle analysis complete! Open build/bundle-report.html"

optimize:
	@echo "âš¡ Running optimization checks..."
	@echo "1. Checking for unused dependencies..."
	npm run deps:check || true
	@echo ""
	@echo "2. Running security audit..."
	npm audit || true
	@echo ""
	@echo "3. Checking bundle size..."
	@test -d build && du -sh build/ || echo "Run 'make build' first"
	@echo ""
	@echo "4. Running linter..."
	npm run lint || true
	@echo ""
	@echo "âœ… Optimization checks complete!"
	@echo "ğŸ“„ See ANALYSIS_REPORT.md and OPTIMIZATION_PLAN.md for details"

cleanup-deps:
	@echo "ğŸ§¹ Cleaning up unused dependencies..."
	@echo "This will uninstall: @craco/craco ajv exceljs html2canvas js-cookie lodash numeral jspdf"
	@read -p "Continue? [y/N] " confirm; \
	if [ "$$confirm" = "y" ] || [ "$$confirm" = "Y" ]; then \
		npm uninstall @craco/craco ajv exceljs html2canvas js-cookie lodash numeral jspdf; \
		echo "âœ… Cleanup complete!"; \
	else \
		echo "Cancelled."; \
	fi

fix-security:
	@echo "ğŸ”’ Fixing security vulnerabilities..."
	@echo "Running npm audit fix..."
	npm audit fix
	@echo ""
	@echo "Checking remaining issues..."
	npm audit
	@echo ""
	@echo "ğŸ“„ For detailed security info, see ANALYSIS_REPORT.md"

install-missing:
	@echo "ğŸ“¦ Installing safe backend dependencies (excluding mjml)..."
	@echo "âš ï¸  Note: mjml excluded due to unfixable vulnerabilities"
	npm install handlebars @sendgrid/mail socket.io node-fetch --legacy-peer-deps
	@echo ""
	@echo "âš ï¸  For Telegram: npm install node-telegram-bot-api@0.67.0 --legacy-peer-deps"
	@echo "ğŸ“„ See SECURITY_CRITICAL_DEPENDENCIES.md for details"
	@echo "âœ… Safe dependencies installed!"

quick-wins:
	@echo "âš¡ Applying quick optimization wins..."
	@echo ""
	@echo "Step 1: Installing safe dependencies..."
	@$(MAKE) install-missing
	@echo ""
	@echo "Step 2: Fixing security issues..."
	npm audit fix --legacy-peer-deps || true
	@echo ""
	@echo "âœ… Quick wins complete! Check npm audit for remaining issues"
	@echo "ğŸ“„ Next: See SECURITY_CRITICAL_DEPENDENCIES.md for MJML refactor plan"

# Cleanup
clean:
	@echo "ğŸ§¹ Cleaning build artifacts..."
	rm -rf build/
	rm -rf node_modules/.cache/
	@echo "âœ… Cleanup complete!"

clean-all:
	@echo "ğŸ§¹ Cleaning everything..."
	rm -rf build/
	rm -rf node_modules/
	rm -rf backend/node_modules/
	rm -rf coverage/
	rm -rf .cache/
	@echo "âœ… Deep cleanup complete!"

# Docker (for future use)
docker-build:
	@echo "ğŸ³ Building Docker image..."
	docker build -t mia-logistics-manager .

docker-run:
	@echo "ğŸ³ Running Docker container..."
	docker run -p 3000:3000 -p 3100:3100 mia-logistics-manager

# Git shortcuts
git-status:
	@git status

git-push:
	@git push origin $(shell git branch --show-current)

git-pull:
	@git pull origin $(shell git branch --show-current)

# Quick commands
dev: start
prod: build deploy
check: lint test security

