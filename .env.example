# ============================================
# MIA LOGISTICS MANAGER - ENVIRONMENT CONFIG
# ============================================
# Copy file này thành .env và điền thông tin thực tế
# KHÔNG commit file .env vào Git

# ============================================
# GOOGLE SHEETS CONFIGURATION (Required)
# ============================================
REACT_APP_GOOGLE_SPREADSHEET_ID=your_spreadsheet_id_here
GOOGLE_SHEETS_SPREADSHEET_ID=your_spreadsheet_id_here

# ============================================
# GOOGLE DRIVE CONFIGURATION (Optional)
# ============================================
REACT_APP_GOOGLE_DRIVE_FOLDER_ID=your_folder_id_here

# ============================================
# GOOGLE APPS SCRIPT CONFIGURATION (Optional)
# ============================================
REACT_APP_GOOGLE_APPS_SCRIPT_ID=your_script_id_here
REACT_APP_APPS_SCRIPT_WEB_APP_URL=https://script.google.com/macros/s/YOUR_APPS_SCRIPT_ID/exec

# ============================================
# GOOGLE SERVICE ACCOUNT (Backend - Optional)
# ============================================
GOOGLE_APPLICATION_CREDENTIALS=./backend/your-service-account.json

# ============================================
# TELEGRAM CONFIGURATION (Optional)
# ============================================
REACT_APP_TELEGRAM_BOT_TOKEN=your_bot_token_here
REACT_APP_TELEGRAM_CHAT_ID=your_chat_id_here
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# ============================================
# EMAIL CONFIGURATION (Optional - SendGrid)
# ============================================
SENDGRID_API_KEY=your_sendgrid_api_key_here
EMAIL_FROM=your_sender_email@domain.com

# ============================================
# SERVER CONFIGURATION (Required)
# ============================================
BACKEND_PORT=5050
FRONTEND_PORT=3000
NODE_ENV=development
REACT_APP_API_BASE_URL=http://localhost:5050

# ============================================
# FEATURE FLAGS (Optional)
# ============================================
REACT_APP_ENABLE_GOOGLE_SHEETS=true
REACT_APP_ENABLE_GOOGLE_DRIVE=true
REACT_APP_ENABLE_GOOGLE_APPS_SCRIPT=true
REACT_APP_USE_MOCK_DATA=false

# ============================================
# AI SERVICE CONFIGURATION (Optional)
# ============================================
AI_SERVICE_URL=http://localhost:8000
AI_SERVICE_ENABLED=false
